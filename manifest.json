{
  "name": "Jira Extension",
  "version": "1.0.1",
  "description": "A extension to help you when using the Jira platform.",
  "manifest_version": 3,
  "author": "Jeconias Santos <https://github.com/jeconias>",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": [],
  "action": {
    "default_popup": "src/index.html",
    "default_title": "Jira Extension"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}
